      %th Email
      %th First name
      %th Last name
      %th Address
      %th City
      %th State
      %th Zip code
      %th Role
      %th{colspan: "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.first_name
        %td= user.last_name
        %td= user.address
        %td= user.city
        %td= user.state
        %td= user.zip_code
        %td= user.role
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
