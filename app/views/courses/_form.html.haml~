= form_for(@course) do |f|
  - if @course.errors.any?
    #error_explanation
      %h2
        = pluralize(@course.errors.count, "error")
        prohibited this course from being saved:
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :details
    %br/
    = f.text_area :details
  .field
    = f.label :credit_hours
    %br/
    = f.number_field :credit_hours
  .field
    = f.label :semester
    %br/
    = f.number_field :semester
  .field
    = f.label :instructor
    %br/
    = f.text_field :instructor
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .actions
    = f.submit :class => 'navbutton'
